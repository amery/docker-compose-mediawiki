# vim: set ft=yaml ts=2 sw=2 et:
version: '3'

volumes:
  wiki:
    driver: local
    driver_opts:
      type: overlay
      o: "lowerdir=${PWD}/mediawiki,upperdir=${PWD}/overlay,workdir=${PWD}/.overlay"
      device: overlay

services:

  @@NAME@@:
    container_name: mediawiki
    build: ./docker

    restart: always
    volumes:
      - wiki:/srv/http/wiki
    env_file:
      - "mediawiki.env"
    depends_on:
      - db
    networks:
      - default

  db:
    container_name: db
    image: @@MYSQL_IMAGE@@

    restart: always
    volumes:
      - "./db:/var/lib/mysql"
    env_file:
      - "db.env"
    networks:
      - default

  nginx:
    container_name: nginx
    image: @@NGINX_IMAGE@@

    restart: always
    volumes:
      - "wiki:/srv/http/wiki"
      - "./nginx.conf:/etc/nginx/conf.d/default.conf"
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.@@NAME@@.rule=Host(`@@HOSTNAME@@`)"

    depends_on:
      - @@NAME@@
    networks:
      - default
      - @@TRAEFIK_BRIDGE@@

networks:
  @@TRAEFIK_BRIDGE@@:
    external: true
  default:
